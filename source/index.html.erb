<div class="row">
  <div class="col-md-12">
    <div class="task-list">
      <div class="task">
        <div class="input-group input-group-lg">
          <input type="text" class="form-control timer-name" name="timer-name" value="{{name}}">

          <div class="input-group-btn">
            <button type="button" class="btn btn-default task-status" data-seconds="{{time}}">
              <span class="time">{{timeHHMMSS}}</span>
              <span class="glyphicon glyphicon-time"></span>
            </button>
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#" class="reset-timer"><span class="glyphicon glyphicon-refresh"></span> Reset</a></li>
              <li><a href="#" class="delete-task"><span class="glyphicon glyphicon-remove-circle"></span> Delete</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="controls">
      <div class="btn-group">
        <button class="btn btn-default export-tasks">
          Export&nbsp;
          <span class="glyphicon glyphicon-new-window"></span>
        </button>
        <button class="btn btn-default new-task">
          New Task&nbsp;
          <span class="glyphicon glyphicon-plus-sign"></span>
        </button>
      </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Task Summary</h4>
          </div>
          <div class="modal-body">
            <textarea class="form-control" rows="5"></textarea>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </div>
</div>
